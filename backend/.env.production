# Campus Connect Backend - Production Environment Variables
# Use these for production deployment on Render or other cloud platforms

# Database Configuration (Render PostgreSQL)
DATABASE_URL=${DATABASE_URL}
DATABASE_USERNAME=${DATABASE_USERNAME}
DATABASE_PASSWORD=${DATABASE_PASSWORD}

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Server Configuration
SERVER_PORT=${PORT:8080}
SPRING_PROFILES_ACTIVE=prod

# CORS Configuration (Update with your frontend domain)
CORS_ALLOWED_ORIGINS=${FRONTEND_URL:https://your-frontend-domain.com}

# File Upload Configuration
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/campus-connect/application.log

# Email Configuration (Production SMTP)
MAIL_HOST=${MAIL_HOST:smtp.gmail.com}
MAIL_PORT=${MAIL_PORT:587}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_FROM=${MAIL_FROM:noreply@campusconnect.edu}

# Redis Configuration (Production Redis)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT:6379}
REDIS_PASSWORD=${REDIS_PASSWORD}

# Application Configuration
APP_NAME=Campus Connect
APP_VERSION=1.0.0
APP_DESCRIPTION=Student Community Platform

# Security Configuration
BCRYPT_STRENGTH=12
SESSION_TIMEOUT=1800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring Configuration
ACTUATOR_ENDPOINTS_ENABLED=false
METRICS_ENABLED=true

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true